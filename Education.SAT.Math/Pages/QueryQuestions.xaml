<Page x:Class="Education.SAT.Math.Pages.QueryQuestions"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Education.SAT.Math.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="QueryQuestions">

    <Grid>
        <ListBox ItemsSource="{Binding}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Question}" Width="100" TextWrapping="Wrap" />
                        <ListBox ItemsSource="{Binding Choices}" Width="100" BorderThickness="0" IsEnabled="False" Background="Transparent">
                            
                        </ListBox>
                        <TextBlock Text="{Binding Answer}" Width="100" />

                        <TextBlock Text="{Binding Difficulty}" Width="100" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Page>
